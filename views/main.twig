{% from "/macros/btn.twig" import btn as btn %}
{% extends "__layout.twig" %}

{% block content %}
<div class="row col-10">
    {% for object in bands %}
    <div class="m text-center col-3" style=" border: 1.5px solid gray">
        <div class="border p-2 flex-grow-1 d-flex flex-column justify-content-between position-relative" >
            <div class="position-absolute" style="right: 4px; top: 4px">
                <form action="/bands/delete" method="POST">
                    <input type="hidden" name="id" value="{{object.id}}">
                <button type="submit" class= "btn btn-danger">
                    <i class="fas fa-times"></i>
                    </button>
                </form>
                <form action = "/edit/{{object.id}}">
                    <input type = "hidden" name = "id" value="{{object.id}}">
                    <button type = "submit" class="btn btn-info">   
                        <i class="fas fa-edit"></i>
                    </button>
            </div>
        </div>
        
        
        <div class="mt-2">
            <img class = "m-2" src="{{ object.image}}" style="width: 200px;"/>
            <div class="d-flex" m>
                {{ btn(object.name, "/bands/"~object.id, true) }}
              </div>
            <div class="mb-4">
                {{ btn("Картинка", "/bands/"~object.id~"?show=image", false) }}
                {{ btn("Описание", "/bands/"~object.id~"?show=info", false) }}
            </div> 
        </div>
    </div>
    {% endfor %}
</div>
    

{% endblock %}